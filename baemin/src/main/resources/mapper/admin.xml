<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="baemin.admin">

    <select id="selectMemberList" resultType="HashMap">
        SELECT
            userNickname,
            userEmail,
            userPhonenum,
            userPoint,
            DATE_FORMAT(regDate, '%Y-%m-%d') AS regDate
        FROM
            user_info
        ORDER BY
            <if test="orderType == 0">
                userIdn
            </if>
            <if test="orderType == 1">
                userNickname
            </if>
            <if test="orderType == 2">
                regDate DESC
            </if>
    </select>

</mapper>